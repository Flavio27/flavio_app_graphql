// }

model User {
  id            String        @id @default(uuid())
  email         String        @unique
  name          String
  password      String
  created_at    DateTime      @default(now())
  refresh_token RefreshToken?

  @@map("users")
}

enum ProductType {
  ALIMENTO
  LIMPEZA
  HIGIENE
  UTENSILIOS
}

model Products {
  id          String      @id
  code        String      @unique
  barcode     Int
  description String
  type        ProductType

  @@map("products")
}

model RefreshToken {
  id        String @id @default(uuid())
  expiresIn Int
  user      User   @relation(fields: [userId], references: [id])
  userId    String @unique

  @@map("refresh_token")
}
